	<Regulation>
		<Regulator id="R1" method="allow"  value="#+-" code="" />
		<Regulator id="R2" method="divide" value=""   code="0x0020,0x0021~0x002F,0x003A~0x0040" />
		<Regulator id="R3" method="unite"  value=""   code="" />
	</Regulation>

	<LAE>
			<SpellerDictionary path="/search/sf-1/knowledge/speller" />
			<RestrictDictionary path="/search/sf-1/knowledge/restrict" />
			<KoreanDictionary path="/search/sf-1/knowledge/korean" usepreanalysis="n"/>

			<Method id="token"		analysis="token" />
			<Method id="ngram"		analysis="ngram" />
			<Method id="like"		analysis="like" />
			<Method id="matrix"		analysis="matrix" />
			<Method id="kma"		analysis="korean" option="" specialchar="#+-" />
			<Method id="kmanoun"	analysis="korean" option="A-" specialchar="#+-" usepreanalysis="n" expansion="searchonly" soundex="n"/>
	</LAE>



<?xml version="1.0" encoding="UTF-8" ?>

<SFConfig>
	<ISC port="7000" threadno="30" >
		<TimeOut API="3" Searcher="5" />
		<QueryLog path="/search/sf-1/log/querylog/isc/common" />
        <CollectionQueryLog path="/search/sf-1/log/querylog/isc/collection" />
		<RecentQuery length="100" duplicate="n" />
		<Monitor port="7100" period="3" />
	</ISC>

	<Global> <!-- 색인 타겟 전역 설정 /-->
		<TargetPath value="/search/sf-1/collection/target" />
	</Global>  

	<LocalSearcher id="sc" threadno="50">
